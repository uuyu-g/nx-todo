{
  "firestore": {
    "rules": "apps/backend/firestore.rules",
    "indexes": "apps/backend/firestore.indexes.json"
  },
  "functions": {
    "source": "dist/apps/backend",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "hosting": [
    {
      "target": "client",
      "public": "dist/apps/client",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "admin",
      "public": "dist/apps/admin",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    }
  }
}
